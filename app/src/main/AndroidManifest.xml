<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twistedgeinc.apps.tiwapa">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tiwapa_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/tiwapa_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Home"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimationTheme" />
        <activity android:name=".RegisterUserActivity" />
        <activity
            android:name=".ProfileActivity"
            android:label="Profile"
            android:screenOrientation="portrait"
            android:theme="@style/noAnimationTheme" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".family.MyFamily"
            android:theme="@style/noAnimationTheme" />
        <activity android:name=".family.AddRelativeActivity"></activity>
    </application>

</manifest>